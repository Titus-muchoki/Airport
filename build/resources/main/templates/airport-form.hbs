{{#partial "content"}}
    {{#if editAirports}}
        <h1>Edit this airport!</h1>
        <form action="/airports/{{airport.id}}" method="post">
            <br>
            <label for="name">Edit this airport name</label>
            <input id="name" name="name" type="text" value="{{airport.name}}">
            <br>
            <label for="code">Edit this airport Code</label>
            <input id="code" name="code" type="text" value="{{airport.code}}">
            <br>
            <label for="city">Edit this airport City</label>
            <input id="city" name="city" type="text" value="{{airport.city}}">
            <br>
            <label for="distance">Edit this airport Distance</label>
            <input id="distance" name="distance" type="text" value="{{airport.distance}}">
            <br>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new Airport!</h1>
        <form action="/airports" method="post">

            <label for="name">airport name</label>
            <input id="name" name="name" type="text">
            <br>
            <label for="code">airport code</label>
            <input id="code" name="code" type="text">
            <br>
            <label for="city">airport city</label>
            <input id="city" name="city" type="text">
            <br>
            <label for="distance">airport distance</label>
            <input id="distance" name="distance" type="text">
            <br>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}