{{#partial "content"}}

    {{#if editAirport}}
        <h1>Edit this Airport!</h1>
        <form action="/airports/{{airport.id}}" method="post">
            <br>
            <label for="name">Edit this airport name</label>
            <input id="name" name="name" type="text" value="{{airport.name}}">
            <br>

            <label for="code">Airport code</label>
            <input id="code" name="code" type="number" value="{{airport.code}}"> <br>

            <label for="city">Airport city</label>
            <input id="city" name="city" type="text" value="{{airport.city}}"> <br>

            <label for="distance">Airport distance</label>
            <input id="distance" name="distance" type="text" value="{{airport.distance}}"> <br>

            <label for="activityId">Airport activityId</label>
            <input id="activityId" name="activityId" type="text" value="{{airport.activityId}}"> <br>

            <label for="activityId">Update this airport activity:</label>
            <select id="activityId" name="activityId">
                  {{#each activities}}
                    <li><a href="/activities/airports/{{id}}">{{inspectionDate}}<br>
                        {{inspectionArea}}<br>
                        {{inspectionOutcome}}<br>
                        {{serviceAbilityStatus}}<br>
                        {{airportId}}
                    </a></li>
                    <option value="{{activity.airportId}}">{{inspectionDate}}<br>{{inspectionArea}}<br>{{inspectionOutcome}}<br>{{ serviceAbilityStatus}}</option>
                {{/each}}
            </select>
            <p>Don't see the right Activity?<a href="/activities/new">Add a new activity.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new Airport!</h1>

        <form action="/airports" method="post">
            {{#if airports}}
                <label for="name"> airport name</label>
                <input id="name" name="name" type="text" value="{{airport.name}}">
                <br>

                <label for="code">Airport code</label>
                <input id="code" name="code" type="number" value="{{airport.code}}"> <br>

                <label for="city">Airport city</label>
                <input id="city" name="city" type="text" value="{{airport.city}}"> <br>

                <label for="distance">Airport distance</label>
                <input id="distance" name="distance" type="text" value="{{airport.distance}}"> <br>
                                  <br>
                <button type="submit" class="btn btn-default">Go!</button>


                                <label for="activityId">Update this airport activity:</label>
                <select id="activityId" name="activityId">
                    {{#each activities}}
                        <option value="{{id}}">{{inspectionDate}}{{inspectionArea}}{{inspectionOutcome}}{{ serviceAbilityStatus}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right activity?<a href="/activities/new">Add a new activity first.</a></p>
            {{else}}
                <h3> You'll need to add an activity before you add a airport. <a href="/activities/new">Add one here.</a> </h3>

            {{/if}}
